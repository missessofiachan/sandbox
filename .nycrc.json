{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.d.ts",
    "src/test-db-connection.ts",
    "src/index.ts",
    "tests/**/*",
    "dist/**/*"
  ],
  "reporter": ["text", "html", "lcov"],
  "report-dir": "coverage",
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}
